<VBox stylesheets="@../../styles/profile.css" fx:controller="com.leroy.inventorymanagementfx.controller.ProfileController"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="700.0" prefHeight="600.0" alignment="TOP_CENTER" spacing="20" styleClass="root-pane">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="My Profile" styleClass="page-title"/>

<!--    <VBox alignment="CENTER" spacing="10" styleClass="profile-picture-container">-->
