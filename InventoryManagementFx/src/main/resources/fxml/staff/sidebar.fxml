<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox fx:id="sidebar" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefHeight="274.0" prefWidth="140.0" styleClass="sidebar" stylesheets="@../../styles/sidebar.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leroy.inventorymanagementfx.controller.staff.StaffSidebarController">


    <!-- Sidebar Header -->
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2c3e50" height="50.0" stroke="TRANSPARENT" width="200.0">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Rectangle>

    <!-- Sidebar Items -->
    <Button fx:id="dashboardBtn" styleClass="sidebar-item" text="Dashboard" />

    <Button fx:id="inventoryItemsBtn" layoutX="10.0" layoutY="95.0" mnemonicParsing="false" styleClass="sidebar-item" text="Inventory Items" />
    <Button fx:id="cartBtn" layoutX="10.0" layoutY="95.0" mnemonicParsing="false" styleClass="sidebar-item" text="Cart" />
    <Button fx:id="settingsBtn" layoutX="10.0" layoutY="137.0" mnemonicParsing="false" styleClass="sidebar-item" text="Settings" />
   <Button fx:id="notificationBtn" layoutX="25.0" layoutY="199.0" mnemonicParsing="false" styleClass="sidebar-item" text="Notifications" />
   <Button fx:id="requestBtn" layoutX="25.0" layoutY="241.0" mnemonicParsing="false" styleClass="sidebar-item" text="Requests" />

<!--    Spacer to push last items-->
    <VBox VBox.vgrow="ALWAYS" />

    <!-- Bottom-aligned items -->
    <Button fx:id="logoutBtn" styleClass="sidebar-item" text="Logout" />
</VBox>
