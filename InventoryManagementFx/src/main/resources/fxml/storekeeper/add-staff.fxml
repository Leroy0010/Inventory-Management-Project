<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leroy.inventorymanagementfx.controller.storekeeper.CreateStaffController">
    <children>
        <VBox alignment="CENTER" maxWidth="600.0" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Add Store Keeper/Admin" />

            <VBox id="formContainer" fx:id="formContainer" spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <!-- Form will be rendered here -->
            </VBox>

            <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-weight: bold;" visible="false" />

            <Button fx:id="submitButton" style="-fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-color: #1976d2; -fx-text-fill: white;" text="Add Staff">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </VBox>
    </children>
</StackPane>
