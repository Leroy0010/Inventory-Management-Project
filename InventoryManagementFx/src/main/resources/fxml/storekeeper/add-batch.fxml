<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" minHeight="-Infinity" stylesheets="@../../styles/storekeeper/add-batch.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leroy.inventorymanagementfx.controller.storekeeper.AddInventoryBatchController">
   <children>
      <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5;">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <children>
            <Label style="-fx-font-weight: bold;" text="Add Inventory Batch" textFill="#2b7a78">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox fx:id="formContainer" maxWidth="700.0" minWidth="300.0" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" />
            <HBox alignment="CENTER" spacing="10">
               <Button fx:id="submitButton" mnemonicParsing="false" style="-fx-background-color: #4a7dff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Add Batch">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
